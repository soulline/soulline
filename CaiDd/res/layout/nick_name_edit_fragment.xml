<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_bg_layout"
    android:background="@drawable/take_photo_bg"
    android:orientation="vertical" >

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nick_name_bg"
        android:paddingBottom="@dimen/dd_dimen_30px"
        android:layout_centerInParent="true"
        android:orientation="vertical">
    <TextView android:id="@+id/edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:text="编辑昵称"
        android:textColor="@color/dingdang_black"
        android:textSize="@dimen/dd_dimen_34px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_88px"
        android:layout_marginLeft="@dimen/dd_dimen_10px"
        android:layout_marginRight="@dimen/dd_dimen_10px"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:paddingLeft="@dimen/dd_dimen_20px"
        android:paddingRight="@dimen/dd_dimen_20px"
        android:background="@drawable/gray_jamb" >

        <EditText
            android:id="@+id/nickname_input"
            android:layout_width="@dimen/dd_dimen_350px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:textColor="@color/dingdang_black"
            android:textSize="@dimen/dd_dimen_30px" />
        
        <LinearLayout android:id="@+id/remove_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_remove_selector"/>
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_10px"
        android:layout_marginRight="@dimen/dd_dimen_10px"
        android:layout_marginTop="@dimen/dd_dimen_30px">
        <Button android:id="@+id/nick_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bound_phone_selector"
            android:textSize="@dimen/dd_dimen_28px"
            android:textColor="@color/white"
            android:text="取消"/>
        <Button android:id="@+id/nick_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bound_phone_selector"
            android:textSize="@dimen/dd_dimen_28px"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:text="确定"/>
    </RelativeLayout>
    </LinearLayout>

</RelativeLayout>