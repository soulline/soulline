<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dd_dimen_20px" >

        <TextView
            android:id="@+id/answer_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/simple_tx_"
            android:textSize="@dimen/dd_dimen_24px" />

        <View
            android:id="@+id/bottom_dash_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dd_dimen_5px"
            android:background="@drawable/dashes_line_gray" />
    </RelativeLayout>

</LinearLayout>