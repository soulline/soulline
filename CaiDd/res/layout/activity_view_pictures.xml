<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <!-- Title layout -->


    <RelativeLayout
        android:id="@+id/base_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_96px"
        android:background="@drawable/title_bg"
        android:gravity="center_vertical" >
        
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dd_dimen_28px"
        android:padding="@dimen/dd_dimen_20px"
        android:layout_centerVertical="true"
        android:id="@+id/close_btn"
        android:textColor="@drawable/register_text_selector"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:text="关闭" />
        
        <TextView
        android:id="@+id/base_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dd_dimen_36px"
        android:textColor="@color/white"
        android:layout_centerInParent="true" />
        
    </RelativeLayout>

    <!-- Content layout -->

    <RelativeLayout
        android:id="@+id/base_content_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/base_title_layout"
        android:background="@color/black" >

        <android.support.v4.view.ViewPager
            android:id="@+id/image_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <!-- Extra Fragment layout -->

    <FrameLayout
        android:id="@+id/base_extra_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <!-- Loading layout -->

    <FrameLayout
        android:id="@+id/base_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >
    </FrameLayout>

</RelativeLayout>