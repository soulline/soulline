<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dd_dimen_20px"
        android:paddingRight="@dimen/dd_dimen_15px"
        android:paddingTop="@dimen/dd_dimen_20px" >

        <ImageView
            android:id="@+id/answer_icon"
            android:layout_width="@dimen/dd_dimen_58px"
            android:layout_height="@dimen/dd_dimen_58px"
            android:background="@color/jamb_gray"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:layout_toRightOf="@+id/answer_icon"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/answer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/sq_blue"
                    android:textSize="@dimen/dd_dimen_32px" />

                <TextView
                    android:id="@+id/answer_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_10px"
                    android:layout_toRightOf="@+id/answer_name"
                    android:textColor="@color/sq_blue"
                    android:textSize="@dimen/dd_dimen_32px" />

                <LinearLayout
                    android:id="@+id/zan_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dd_dimen_20px" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/zan_selector" />

                    <TextView
                        android:id="@+id/zan_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/simple_tx_"
                        android:textSize="@dimen/dd_dimen_24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赞一个吧"
                        android:textColor="@color/simple_tx_"
                        android:textSize="@dimen/dd_dimen_24px" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/answer_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/simple_tx_"
                android:textSize="@dimen/dd_dimen_26px" />

            <LinearLayout
                android:id="@+id/answer_photo_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/photo1"
                    android:layout_width="@dimen/dd_dimen_170px"
                    android:layout_height="@dimen/dd_dimen_140px"
                    android:background="@color/jamb_gray"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/photo2"
                    android:layout_width="@dimen/dd_dimen_170px"
                    android:layout_height="@dimen/dd_dimen_140px"
                    android:layout_marginLeft="@dimen/dd_dimen_10px"
                    android:background="@color/jamb_gray"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/photo3"
                    android:layout_width="@dimen/dd_dimen_170px"
                    android:layout_height="@dimen/dd_dimen_140px"
                    android:layout_marginLeft="@dimen/dd_dimen_10px"
                    android:background="@color/jamb_gray"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dd_dimen_20px"
                android:layout_marginTop="@dimen/dd_dimen_10px" >

                <TextView
                    android:id="@+id/answer_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dd_dimen_5px"
                    android:textColor="@color/simple_tx_"
                    android:textSize="@dimen/dd_dimen_24px" />
            </RelativeLayout>
        </LinearLayout>
        <View android:id="@+id/bottom_dash_line"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dd_dimen_1px"
            android:layout_marginRight="@dimen/dd_dimen_5px"
            android:background="@drawable/dashes_line_gray"/>
    </RelativeLayout>

</LinearLayout>