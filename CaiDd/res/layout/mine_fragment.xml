<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/white"
        android:textSize="@dimen/dd_dimen_38px"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:layout_marginRight="@dimen/dd_dimen_10px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:padding="@dimen/dd_dimen_1px"
                android:background="@drawable/gray_jamb"
                android:orientation="vertical" >

                <RelativeLayout android:id="@+id/self_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_info_selector"
                    android:paddingTop="@dimen/dd_dimen_10px"
                    android:paddingLeft="@dimen/dd_dimen_10px"
                    android:paddingRight="@dimen/dd_dimen_10px"
                    android:paddingBottom="@dimen/dd_dimen_10px" >

                    <ImageView
                        android:id="@+id/self_portrait"
                        android:layout_width="@dimen/dd_dimen_138px"
                        android:layout_height="@dimen/dd_dimen_138px"
                        android:background="@color/jamb_gray"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="@dimen/dd_dimen_440px"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dd_dimen_30px"
                        android:layout_toRightOf="@+id/self_portrait"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/nick_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/dingdang_black"
                                android:textSize="@dimen/dd_dimen_34px" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dd_dimen_20px"
                                android:background="@drawable/level_icon" />

                            <TextView
                                android:id="@+id/level_tx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dd_dimen_10px"
                                android:textColor="@color/dingdang_black"
                                android:textSize="@dimen/dd_dimen_26px" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dd_dimen_30px"
                                android:background="@drawable/dd_coin_icon" />

                            <TextView
                                android:id="@+id/coin_tx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dd_dimen_10px"
                                android:textColor="@color/dingdang_black"
                                android:textSize="@dimen/dd_dimen_26px" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/simple_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="2"
                            android:text=""
                            android:textColor="@color/simple_tx_"
                            android:textSize="@dimen/dd_dimen_28px" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/angle_right" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dd_dimen_1px"
                    android:layout_marginLeft="@dimen/dd_dimen_10px"
                    android:layout_marginRight="@dimen/dd_dimen_10px"
                    android:background="@drawable/dashes_line_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dd_dimen_20px"
                    android:layout_marginTop="@dimen/dd_dimen_20px" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/trends_content_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dd_dimen_80px"
                            android:paddingRight="@dimen/dd_dimen_80px" >

                            <TextView
                                android:id="@+id/trends_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="0"
                                android:textColor="@drawable/user_item_tx_selector"
                                android:textSize="@dimen/dd_dimen_32px" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="动态"
                                android:textColor="@drawable/user_item_tx1_selector"
                                android:textSize="@dimen/dd_dimen_32px" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/listen_content_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dd_dimen_80px"
                            android:paddingRight="@dimen/dd_dimen_80px" >

                            <TextView
                                android:id="@+id/listen_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="0"
                                android:textColor="@drawable/user_item_tx_selector"
                                android:textSize="@dimen/dd_dimen_32px" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="关注"
                                android:textColor="@drawable/user_item_tx1_selector"
                                android:textSize="@dimen/dd_dimen_32px" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fans_content_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dd_dimen_80px"
                            android:paddingRight="@dimen/dd_dimen_80px" >

                            <TextView
                                android:id="@+id/fans_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="0"
                                android:textColor="@drawable/user_item_tx_selector"
                                android:textSize="@dimen/dd_dimen_32px" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="粉丝"
                                android:textColor="@drawable/user_item_tx1_selector"
                                android:textSize="@dimen/dd_dimen_32px" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- <RelativeLayout
                android:id="@+id/exam_alarm_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_90px"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:layout_marginRight="@dimen/dd_dimen_10px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:background="@drawable/gray_jarm_selector"
                android:paddingLeft="@dimen/dd_dimen_10px"
                android:paddingRight="@dimen/dd_dimen_10px" >

                <ImageView
                    android:id="@+id/exam_alarm_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/exam_alarm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_toRightOf="@+id/exam_alarm_img"
                    android:text="考试提醒"
                    android:textColor="@color/dingdang_black"
                    android:textSize="@dimen/dd_dimen_36px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/angle_right" />
            </RelativeLayout> -->

            <RelativeLayout
                android:id="@+id/my_question_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_90px"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:layout_marginRight="@dimen/dd_dimen_10px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:background="@drawable/gray_jarm_selector"
                android:paddingLeft="@dimen/dd_dimen_10px"
                android:paddingRight="@dimen/dd_dimen_10px" >

                <ImageView
                    android:id="@+id/my_question_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/my_questions" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_toRightOf="@+id/my_question_img"
                    android:text="我的提问"
                    android:textColor="@color/dingdang_black"
                    android:textSize="@dimen/dd_dimen_36px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/angle_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_answers_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_90px"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:layout_marginRight="@dimen/dd_dimen_10px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:background="@drawable/gray_jarm_selector"
                android:paddingLeft="@dimen/dd_dimen_10px"
                android:paddingRight="@dimen/dd_dimen_10px" >

                <ImageView
                    android:id="@+id/my_answers_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/my_answers" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_toRightOf="@+id/my_answers_img"
                    android:text="我的回答"
                    android:textColor="@color/dingdang_black"
                    android:textSize="@dimen/dd_dimen_36px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/angle_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_collect_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_90px"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:layout_marginRight="@dimen/dd_dimen_10px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:background="@drawable/gray_jarm_selector"
                android:paddingLeft="@dimen/dd_dimen_10px"
                android:paddingRight="@dimen/dd_dimen_10px" >

                <ImageView
                    android:id="@+id/my_collect_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/my_collect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_toRightOf="@+id/my_collect_img"
                    android:text="我的收藏"
                    android:textColor="@color/dingdang_black"
                    android:textSize="@dimen/dd_dimen_36px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/angle_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_letters_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_90px"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:layout_marginRight="@dimen/dd_dimen_10px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:background="@drawable/gray_jarm_selector"
                android:paddingLeft="@dimen/dd_dimen_10px"
                android:paddingRight="@dimen/dd_dimen_10px" >

                <ImageView
                    android:id="@+id/my_letters_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/my_letters" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_toRightOf="@+id/my_letters_img"
                    android:text="我的私信"
                    android:textColor="@color/dingdang_black"
                    android:textSize="@dimen/dd_dimen_36px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/angle_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_dingdang_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_90px"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:layout_marginRight="@dimen/dd_dimen_10px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:background="@drawable/gray_jarm_selector"
                android:paddingLeft="@dimen/dd_dimen_10px"
                android:paddingRight="@dimen/dd_dimen_10px" >

                <ImageView
                    android:id="@+id/share_dingdang_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/share_dingdang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_toRightOf="@+id/share_dingdang_img"
                    android:text="分享财叮当"
                    android:textColor="@color/dingdang_black"
                    android:textSize="@dimen/dd_dimen_36px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/angle_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_90px"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:layout_marginRight="@dimen/dd_dimen_10px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:background="@drawable/gray_jarm_selector"
                android:paddingLeft="@dimen/dd_dimen_10px"
                android:paddingRight="@dimen/dd_dimen_10px" >

                <ImageView
                    android:id="@+id/setting_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_toRightOf="@+id/setting_img"
                    android:text="设置"
                    android:textColor="@color/dingdang_black"
                    android:textSize="@dimen/dd_dimen_36px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/angle_right" />
            </RelativeLayout>
            <View android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_80px"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>