<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/date_bg_click"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/take_photo_bg" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
    <TextView
        android:id="@+id/date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:textColor="@color/date_title_black"
        android:textSize="@dimen/dd_dimen_40px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dd_dimen_450px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dd_dimen_10px"
        android:layout_marginRight="@dimen/dd_dimen_10px"
        android:layout_marginTop="@dimen/dd_dimen_50px"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/dd_dimen_200px"
            android:layout_height="match_parent" >

            <com.cdd.third.spinnerwheel.WheelVerticalView
                android:id="@+id/year_spinner"
                android:layout_width="@dimen/dd_dimen_200px"
                android:layout_height="match_parent"
                app:selectionDivider="@color/bottom_title_txblue"
                app:selectionDividerActiveAlpha="1000"
                app:selectionDividerDimmedAlpha="1000"
                app:selectionDividerHeight="@dimen/dd_dimen_4px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_150px"
                android:text="年"
                android:textColor="@color/self_info_blue"
                android:textSize="@dimen/dd_dimen_30px" />
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/dd_dimen_4px"
            android:layout_height="match_parent"
            android:background="@drawable/vertical_line" />

        <RelativeLayout
            android:layout_width="@dimen/dd_dimen_200px"
            android:layout_height="match_parent" >

            <com.cdd.third.spinnerwheel.WheelVerticalView
                android:id="@+id/month_spinner"
                android:layout_width="@dimen/dd_dimen_200px"
                android:layout_height="match_parent"
                app:selectionDivider="@color/bottom_title_txblue"
                app:selectionDividerActiveAlpha="1000"
                app:selectionDividerDimmedAlpha="1000"
                app:selectionDividerHeight="@dimen/dd_dimen_4px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_150px"
                android:text="月"
                android:textColor="@color/self_info_blue"
                android:textSize="@dimen/dd_dimen_30px" />
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/dd_dimen_4px"
            android:layout_height="match_parent"
            android:background="@drawable/vertical_line" />

        <RelativeLayout
            android:layout_width="@dimen/dd_dimen_200px"
            android:layout_height="match_parent" >

            <com.cdd.third.spinnerwheel.WheelVerticalView
                android:id="@+id/day_spinner"
                android:layout_width="@dimen/dd_dimen_200px"
                android:layout_height="match_parent"
                app:selectionDivider="@color/bottom_title_txblue"
                app:selectionDividerActiveAlpha="1000"
                app:selectionDividerDimmedAlpha="1000"
                app:selectionDividerHeight="@dimen/dd_dimen_4px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_150px"
                android:text="日"
                android:textColor="@color/self_info_blue"
                android:textSize="@dimen/dd_dimen_30px" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:layout_marginBottom="@dimen/dd_dimen_20px"
        android:layout_marginTop="@dimen/dd_dimen_30px">
        <Button android:id="@+id/date_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bound_phone_selector"
            android:textSize="@dimen/dd_dimen_28px"
            android:textColor="@color/white"
            android:text="取消"/>
        <Button android:id="@+id/date_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bound_phone_selector"
            android:textSize="@dimen/dd_dimen_28px"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:text="确定"/>
    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>