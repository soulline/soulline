<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dd_dimen_20px"
        android:paddingRight="@dimen/dd_dimen_15px"
        android:paddingTop="@dimen/dd_dimen_20px" >

        <ImageView
            android:id="@+id/ask_icon"
            android:layout_width="@dimen/dd_dimen_58px"
            android:layout_height="@dimen/dd_dimen_58px"
            android:background="@color/jamb_gray"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:layout_toRightOf="@+id/ask_icon"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/ask_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/sq_blue"
                    android:textSize="@dimen/dd_dimen_32px" />

                <TextView
                    android:id="@+id/ask_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_10px"
                    android:layout_toRightOf="@+id/ask_name"
                    android:textColor="@color/sq_blue"
                    android:textSize="@dimen/dd_dimen_32px" />
            </RelativeLayout>

            <TextView
                android:id="@+id/ask_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dingdang_black"
                android:textSize="@dimen/dd_dimen_26px" />

            <LinearLayout
                android:id="@+id/pack_up_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/pack_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="全文"
                    android:textColor="@color/dingdang_black"
                    android:textSize="@dimen/dd_dimen_26px" />

                <ImageView
                    android:id="@+id/pack_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_5px"
                    android:background="@drawable/show_all" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/answer_photo_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/photo1"
                    android:layout_width="@dimen/dd_dimen_170px"
                    android:layout_height="@dimen/dd_dimen_140px"
                    android:background="@color/jamb_gray"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/photo2"
                    android:layout_width="@dimen/dd_dimen_170px"
                    android:layout_height="@dimen/dd_dimen_140px"
                    android:layout_marginLeft="@dimen/dd_dimen_10px"
                    android:background="@color/jamb_gray"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/photo3"
                    android:layout_width="@dimen/dd_dimen_170px"
                    android:layout_height="@dimen/dd_dimen_140px"
                    android:layout_marginLeft="@dimen/dd_dimen_10px"
                    android:background="@color/jamb_gray"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dd_dimen_10px"
                android:layout_marginTop="@dimen/dd_dimen_10px" >

                <TextView
                    android:id="@+id/ask_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dd_dimen_5px"
                    android:text="2014-5-24 10:41"
                    android:textColor="@color/simple_tx_"
                    android:textSize="@dimen/dd_dimen_24px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ask_date"
                    android:layout_marginTop="@dimen/dd_dimen_5px"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/zan_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dd_dimen_20px" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/zan_selector" />

                        <TextView
                            android:id="@+id/zan_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/simple_tx_"
                            android:textSize="@dimen/dd_dimen_24px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点赞"
                            android:textColor="@color/simple_tx_"
                            android:textSize="@dimen/dd_dimen_24px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/shoucang_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dd_dimen_20px" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shoucang_selector" />

                        <TextView
                            android:id="@+id/shoucang_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/simple_tx_"
                            android:textSize="@dimen/dd_dimen_24px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收藏"
                            android:textColor="@color/simple_tx_"
                            android:textSize="@dimen/dd_dimen_24px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/zhuanfa_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dd_dimen_20px" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/zhuanfa_selector" />

                        <TextView
                            android:id="@+id/zhuanfa_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/simple_tx_"
                            android:textSize="@dimen/dd_dimen_24px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分享"
                            android:textColor="@color/simple_tx_"
                            android:textSize="@dimen/dd_dimen_24px" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout android:id="@+id/answer_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dynamic_message_bg"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="@dimen/dd_dimen_10px" >

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/bottom_dash_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dd_dimen_5px"
            android:background="@drawable/dashes_line_gray" />
    </RelativeLayout>

</LinearLayout>