<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/sign_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/take_photo_bg" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/sign_success"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_1px"
                android:layout_marginTop="@dimen/dd_dimen_360px"
                android:background="@drawable/dashes_line_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dd_dimen_50px"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获得叮当币"
                    android:textColor="@color/dingdang_black"
                    android:textSize="@dimen/dd_dimen_40px" />

                <TextView
                    android:id="@+id/sign_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:text="200"
                    android:textColor="@color/dingdang_black"
                    android:textSize="@dimen/dd_dimen_40px" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>