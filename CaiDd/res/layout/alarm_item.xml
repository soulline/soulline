<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alarm_item_blue" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_266px"
        android:descendantFocusability="blocksDescendants" >

        <RelativeLayout
            android:id="@+id/alarm_bg_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/alarm_item_bg" >

            <RelativeLayout
                android:id="@+id/alarm_type_layout"
                android:layout_width="@dimen/dd_dimen_165px"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_45px" >

                <TextView
                    android:id="@+id/alarm_type"
                    android:layout_width="@dimen/dd_dimen_165px"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/dingdang_black"
                    android:textSize="@dimen/dd_dimen_24px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dd_dimen_165px"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alarm_type_layout" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/alarm_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dd_dimen_30px"
                        android:textStyle="bold" />

                    <TextView android:id="@+id/days_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dd_dimen_22px"
                        android:text="Days" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/dd_dimen_450px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_220px"
                android:layout_marginTop="@dimen/dd_dimen_60px"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/alarm_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dingdang_black"
                        android:textSize="@dimen/dd_dimen_22px" />

                    <TextView
                        android:id="@+id/alarm_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dd_dimen_40px"
                        android:background="@drawable/alarm_blue_corler"
                        android:padding="@dimen/dd_dimen_5px"
                        android:textColor="@color/dingdang_black"
                        android:textSize="@dimen/dd_dimen_22px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dd_dimen_1px"
                    android:layout_marginBottom="@dimen/dd_dimen_5px"
                    android:layout_marginTop="@dimen/dd_dimen_5px"
                    android:background="@drawable/dashes_line_gray" />

                <TextView
                    android:id="@+id/alarm_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dingdang_black"
                    android:textSize="@dimen/dd_dimen_30px" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dd_dimen_490px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_230px"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/alarm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/remind_title_blue"
                android:textSize="@dimen/dd_dimen_32px" />

            <LinearLayout android:id="@+id/alarm_rm_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dd_dimen_30px"
                android:paddingRight="@dimen/dd_dimen_30px" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/alarm_item_delete_selector" />
            </LinearLayout>
        </RelativeLayout>

        <View android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/dd_dimen_20px"
            android:paddingRight="@dimen/dd_dimen_20px"
            android:background="@drawable/dashes_line_gray" />
    </RelativeLayout>

</RelativeLayout>