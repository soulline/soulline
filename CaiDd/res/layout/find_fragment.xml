<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bg" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_80px"
            android:background="@drawable/search_btn" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dingdangquan_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_90px"
        android:layout_marginLeft="@dimen/dd_dimen_10px"
        android:layout_marginRight="@dimen/dd_dimen_10px"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:background="@drawable/gray_jarm_selector"
        android:paddingLeft="@dimen/dd_dimen_10px"
        android:paddingRight="@dimen/dd_dimen_10px" >

        <ImageView
            android:id="@+id/dingdangquan_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/dingdangquan_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_toRightOf="@+id/dingdangquan_img"
            android:text="叮当圈"
            android:textColor="@color/dingdang_black"
            android:textSize="@dimen/dd_dimen_36px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/angle_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hot_news_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_90px"
        android:layout_marginLeft="@dimen/dd_dimen_10px"
        android:layout_marginRight="@dimen/dd_dimen_10px"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:background="@drawable/gray_jarm_selector"
        android:paddingLeft="@dimen/dd_dimen_10px"
        android:paddingRight="@dimen/dd_dimen_10px" >

        <ImageView
            android:id="@+id/hot_news_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/hot_news" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_toRightOf="@+id/hot_news_img"
            android:text="热门新鲜事"
            android:textColor="@color/dingdang_black"
            android:textSize="@dimen/dd_dimen_36px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/angle_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_90px"
        android:layout_marginLeft="@dimen/dd_dimen_10px"
        android:layout_marginRight="@dimen/dd_dimen_10px"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:background="@drawable/gray_jarm_selector"
        android:paddingLeft="@dimen/dd_dimen_10px"
        android:paddingRight="@dimen/dd_dimen_10px" >

        <ImageView
            android:id="@+id/group_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/group_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_toRightOf="@+id/group_img"
            android:text="群组"
            android:textColor="@color/dingdang_black"
            android:textSize="@dimen/dd_dimen_36px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/angle_right" />
    </RelativeLayout>

</LinearLayout>