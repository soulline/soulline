<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="@dimen/dd_dimen_60px"
        android:paddingLeft="@dimen/dd_dimen_80px"
        android:paddingRight="@dimen/dd_dimen_80px">
        <TextView android:id="@+id/room_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dd_dimen_28px"
            android:textColor="@color/white"/>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <ImageView android:id="@+id/people_star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/people_bright"/>
            <ImageView android:id="@+id/people_star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/people_bright"/>
            <ImageView android:id="@+id/people_star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/people_bright"/>
            <ImageView android:id="@+id/people_star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/people_bright"/>
            <ImageView android:id="@+id/people_star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/people_bright"/>
            
            <TextView android:id="@+id/room_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dd_dimen_100px"
            android:textSize="@dimen/dd_dimen_28px"
            android:textColor="@color/white"/>
        </LinearLayout>
        
        <TextView android:id="@+id/base_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dd_dimen_28px"
            android:textColor="@color/white"/>
    </RelativeLayout>

</LinearLayout>
